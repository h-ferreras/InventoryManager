{
    "name": "Kotlin Environment",
    "image": "mcr.microsoft.com/devcontainers/java:1-17",
    "features": {
      "ghcr.io/devcontainers/features/gradle:1": {}
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "mathiasfrohlich.kotlin",
          "vscjava.vscode-java-pack"
        ]
      }
    },
    "postCreateCommand": "gradle init --type kotlin-application"
  }
  